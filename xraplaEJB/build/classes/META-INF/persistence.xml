<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="xrapla" transaction-type="RESOURCE_LOCAL">
  	<provider>org.hibernate.ejb.HibernatePersistence</provider>        
           
    <class>org.xrapla.entities.Appointment</class>
    <class>org.xrapla.entities.Room</class>    
    <class>org.xrapla.entities.Course</class>
    <class>org.xrapla.entities.Docent</class>
    <class>org.xrapla.entities.CourseGroup</class>
    <class>org.xrapla.entities.Lecture</class>
    <class>org.xrapla.entities.Student</class>
    <class>org.xrapla.entities.Tutor</class>
    <class>org.xrapla.entities.User</class>                
       
    <properties>    
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.url"        
        value="jdbc:mysql://localhost:3306/xrapla"/>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.password" value=""/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence> 
